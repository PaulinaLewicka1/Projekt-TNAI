@model Manga.Model.Entities.Publisher

@{
    ViewData["Title"] = "DetailsPublishers";
}

<h1>Szczegóły</h1>

<div>
    <h4>Wydawnictwo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Strona internetowa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Website)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="EditPublishers" asp-route-id="@Model?.Id">Edytuj</a>
    }
    <a asp-action="Index">Powrót do listy</a>
</div>
