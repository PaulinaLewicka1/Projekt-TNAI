@model Manga.Model.Entities.MangaSeries

@{
    ViewData["Title"] = "DetailsSeries";
}

<h1>Szczegóły</h1>

<div>
    <h4>Seria mangowa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa serii
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            ISBN Serii
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeriesISBN)
        </dd>
        <dt class="col-sm-2">
            Zakończona
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Completed)
        </dd>
        <dt class="col-sm-2">
            Wydawnictwo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="EditSeries" asp-route-id="@Model?.Id">Edytuj</a>
    }
    <a asp-action="Index">Powrót do listy</a>
</div>
